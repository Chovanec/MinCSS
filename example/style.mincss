/** style.css */

{{background:#444}}
{{color:#fff}}
{{font:"Trebuchet MS", Helvetica, Arial, sans-serif}}

body {
	background-color: {{background}};
	color: {{color}};
	font-family: {{font}};
}

{{base_margin:2em}}

{{
	big_text:
	font-size: 2.5em;
	line-height: 1.5em;
}}

{{
	base_text_shadow:
	text-shadow: 0 2px 2px rgba(0, 0, 0, .5);
}}

h1 {
	margin: {{base_margin}};
	{{big_text}}
	{{base_text_shadow}}
}

p {
	margin: {{base_margin}};
}
